@page "{id:int}"
@model BS05.Personation.MVCCore.EditModel;
@{
}

<div class="card">
    <div class="card-header">
        <h2>Edit Book : @Model.editBook.Title</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="editBook.Id" />
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="editBook.Title" class="control-label">Title:</label>
                            <input asp-for="editBook.Title" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="editBook.Price" class="control-label">Price:</label>
                            <input asp-for="editBook.Price" type="number" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-warning" />
                        <a class="btn btn-dark" asp-page="./List" asp-area="">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>